<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/red_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/red_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/violet_500</item>
        <!-- Customize your theme here. -->
<!--        <item name="windowNoTitle">true</item>-->
        <item name="android:navigationBarColor">@color/violet_500</item>
        <item name="actionBarTheme">@style/ActionBar</item>
        <item name="android:windowBackground">@drawable/window_background</item>
        <item name="colorOnBackground">@color/violet_200</item>
        <!-- Dialogs -->
        <item name="alertDialogTheme">@style/Dialog</item>
        <item name="android:alertDialogTheme">@style/Dialog</item>
        <item name="android:dialogTheme">@style/Dialog</item>
        <item name="dialogTheme">@style/Dialog</item>
    </style>

    <style name="ActionBar" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/violet_200</item>
        <item name="colorOnPrimary">@color/grey</item>
        <item name="android:textColor">@color/grey</item>
    </style>

    <style name="Dialog" parent="Theme.MaterialComponents.Dialog.MinWidth">
        <item name="android:background">@color/violet_200</item>
        <item name="buttonBarNegativeButtonStyle">@style/NeutralButton</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/NeutralButton</item>
    </style>

    <style name="NeutralButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/red_500</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">18sp</item>
<!--        <item name="android:layout_marginEnd">8dp</item>-->
        <item name="rippleColor">@color/grey</item>
    </style>
</resources>